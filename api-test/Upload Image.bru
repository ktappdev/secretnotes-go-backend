meta {
  name: Upload Image
  type: http
  seq: 6
}

post {
  url: {{baseUrl}}/api/secretnotes/notes/image
  body: multipartForm
  auth: none
  headers: {
    X-Passphrase: {{testPhrase}}
  }
}

body:multipart-form {
  image: @file({{imageFile}})
}

tests {
  test("Status is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response contains expected fields", function() {
    expect(res.getBody()).to.have.property('message');
    expect(res.getBody()).to.have.property('fileName');
    expect(res.getBody()).to.have.property('contentType');
    expect(res.getBody()).to.have.property('fileSize');
  });
  
  test("Content type should be image/*", function() {
    expect(res.getBody().contentType).to.match(/^image\//);
  });
}
