meta {
  name: Test Invalid Passphrase
  type: http
  seq: 9
}

get {
  url: {{baseUrl}}/api/secretnotes/notes/ab
  body: none
  auth: none
}

tests {
  test("Status is 400 for short passphrase", function() {
    expect(res.getStatus()).to.equal(400);
  });
  
  test("Response contains error message", function() {
    expect(res.getBody()).to.have.property('error');
    expect(res.getBody().error).to.equal('Passphrase must be at least 3 characters long');
  });
}
