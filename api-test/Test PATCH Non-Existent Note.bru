meta {
  name: Test PATCH Non-Existent Note
  type: http
  seq: 10
}

patch {
  url: {{baseUrl}}/api/secretnotes/notes
  body: json
  auth: none
  headers: {
    X-Passphrase: non-existent-note-12345
  }
}

body:json {
  {
    "message": "This should fail because note doesn't exist"
  }
}

tests {
  test("Status is 404 for non-existent note", function() {
    expect(res.getStatus()).to.equal(404);
  });
  
  test("Response contains error message (case-insensitive)", function() {
    expect(res.getBody()).to.have.property('error');
    expect(String(res.getBody().error).toLowerCase()).to.equal('note not found');
  });
}
