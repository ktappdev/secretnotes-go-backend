meta {
  name: Get Image
  type: http
  seq: 7
}

get {
  url: {{baseUrl}}/api/secretnotes/notes/{{testPhrase}}/image
  body: none
  auth: none
}

tests {
  test("Status is 200 or 404", function() {
    expect([200, 404]).to.include(res.getStatus());
  });
  
  test("If image exists, content type should be image", function() {
    if (res.getStatus() === 200) {
      expect(res.getHeader('content-type')).to.match(/^image\//);
    }
  });
}
